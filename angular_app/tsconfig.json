{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",//"commonjs",//"esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",//"es2018",//"es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types" : ["node"],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "./global.d.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
